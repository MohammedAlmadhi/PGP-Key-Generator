<%- include('../partials/header', { title: 'PGP Key Generator' }) %>
<%- include('../partials/navbar', { activePage: 'home' }) %>

<%- include('../partials/flashMessages') -%>   
<div class="container mt-5" id="generate-cont">
  <h1 class="text-center mb-4">Generate a PGP Key Pair</h1>
  <div class="row">
    <div class="col-md-6 mb-3">
      <!-- Form content -->
      <form id="pgpForm">
        <div class="form-group">
          <label for="name">Your name *</label>
          <input type="text" id="name" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="email">Email *</label>
          <input type="email" id="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="algorithm">Algorithm</label>
          <select id="algorithm" class="form-control">
            <option value="rsa">RSA</option>
            <option value="ecc">ECC</option>
          </select>
        </div>
        <div class="form-group">
          <label for="keySize">Key Size</label>
          <select id="keySize" class="form-control">
            <option value="2048">2048</option>
            <option value="3072">3072</option>
            <option value="4096">4096</option>
          </select>
        </div>
        <div class="form-group">
          <label for="expires">Expires</label>
          <select id="expires" class="form-control">
            <option value="1">1 year</option>
            <option value="2">2 years</option>
            <option value="5">5 years</option>
          </select>
        </div>
        <div class="form-group">
          <label for="passphrase">Passphrase *</label>
          <input type="password" id="passphrase" class="form-control" required>
        </div>
        <button type="button" id="generateKeyBtn" class="btn btn-primary">Generate Keys</button>
      </form>
    </div>
    <div class="col-md-6">
      <!-- Key display area -->
      <h3>Your Keys</h3>
      <div class="form-group">
        <label>Public Key</label>
        <textarea id="publicKey" class="form-control" readonly></textarea>
        <button id="downloadPubKey" class="btn btn-secondary mt-2">Download Public Key</button>
      </div>
      <div class="mt-3">
        <label>Private Key</label>
        <textarea id="privateKey" class="form-control" readonly></textarea>
        <button id="downloadPrivKey" class="btn btn-secondary mt-2">Download Private Key</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/main.js"></script>
<%- include('../partials/footer') %>
