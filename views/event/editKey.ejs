<%- include('../partials/header', { title: 'Edit PGP Key' }) %>
<%- include('../partials/navbar', { activePage: 'profile' }) %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Edit PGP Key</h1>
  <div class="row">
    <div class="col-md-6 mb-3">
      <!-- Form content -->
      <form id="editKeyForm">
        <input type="hidden" id="keyId" value="<%= key._id %>">
        <div class="form-group">
          <label for="name">Your name *</label>
          <input type="text" id="name" name="name" class="form-control" value="<%= key.name %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email *</label>
          <input type="email" id="email" name="email" class="form-control" value="<%= key.email %>" required>
        </div>
        <div class="form-group">
          <label for="algorithm">Algorithm</label>
          <select id="algorithm" name="algorithm" class="form-control">
            <option value="rsa" <%= key.algorithm === 'rsa' ? 'selected' : '' %>>RSA</option>
            <option value="ecc" <%= key.algorithm === 'ecc' ? 'selected' : '' %>>ECC</option>
          </select>
        </div>
        <div class="form-group">
          <label for="keySize">Key Size</label>
          <select id="keySize" name="keySize" class="form-control">
            <option value="2048" <%= key.keySize === 2048 ? 'selected' : '' %>>2048</option>
            <option value="3072" <%= key.keySize === 3072 ? 'selected' : '' %>>3072</option>
            <option value="4096" <%= key.keySize === 4096 ? 'selected' : '' %>>4096</option>
          </select>
        </div>
        <div class="form-group">
          <label for="expires">Expires</label>
          <select id="expires" name="expires" class="form-control">
            <option value="1" <%= new Date(key.expires).getFullYear() - new Date().getFullYear() === 1 ? 'selected' : '' %>>1 year</option>
            <option value="2" <%= new Date(key.expires).getFullYear() - new Date().getFullYear() === 2 ? 'selected' : '' %>>2 years</option>
            <option value="5" <%= new Date(key.expires).getFullYear() - new Date().getFullYear() === 5 ? 'selected' : '' %>>5 years</option>
          </select>
        </div>
        <div class="form-group">
          <label for="passphrase">Passphrase *</label>
          <input type="password" id="passphrase" name="passphrase" class="form-control" value="<%= key.passphrase %>" required>
        </div>
        <button type="button" id="updateKeyBtn" class="btn btn-primary">Update Key</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/editKey.js"></script>

<%- include('../partials/footer') %>
